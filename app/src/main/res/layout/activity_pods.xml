<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".activity.pod.PodsActivity">

    <LinearLayout
        android:id="@+id/llMain"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvEndPod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:padding="10dp"
            android:text="End Pod"
            android:visibility="gone"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:padding="20dp"
            android:textSize="20sp"
            android:textColor="@color/teal_700"
            android:text="@string/app_name"/>
    </LinearLayout>

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="10dp"
        android:max="100"
        android:visibility="gone"
        android:min="0" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="start|center"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:background="@color/turquoise_green"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvLeaveQuietly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leave Quietly"
            android:padding="5dp"
            android:visibility="gone"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/ivMic"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:scaleType="centerCrop"
            android:padding="5dp"
            android:visibility="gone"
            android:src="@drawable/ic_baseline_mic_24" />

        <ImageView
            android:id="@+id/ivBackgroundMusic"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:scaleType="centerCrop"
            android:padding="5dp"
            android:visibility="gone"
            android:src="@drawable/ic_broadcast_disable" />

    </LinearLayout>
    </LinearLayout>
    <ProgressBar
        android:id="@+id/pbBar"
        android:layout_centerInParent="true"
        android:layout_width="25dp"
        android:layout_height="25dp"/>
</RelativeLayout>